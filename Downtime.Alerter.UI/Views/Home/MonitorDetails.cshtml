@model Downtime.Alerter.DAL.ViewModels.MonitoringHistoryVm

@{
    ViewData["Title"] = "Details";
}

<h1>Monitoring Details</h1>

<div>
    <h4>Monitoring Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsUp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MonitorTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MonitorTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Application List</a>
    <a asp-action="Details" asp-route-id="@Model.ApplicationId">Back to Application Details</a>
</div>
@if (Model.Notifications.Any())
{
    <h1>Notifications</h1>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notifications[0].NotificationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notifications[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notifications[0].Status)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Notifications)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
        </tbody>
    </table>
}


